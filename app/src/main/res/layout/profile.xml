<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8343F4"
                android:elevation="1dp"
                android:id="@+id/toolbar_exer">

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="50dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profile_profile"
                android:layout_marginRight="30dp"/>

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="민규태"
                android:textSize="40dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/genderImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/porfile_male"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/genderTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남자"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/heightImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/porfile_height"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/heightTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="168cm"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/weightImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/porfile_weight"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/weightTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="73kg"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/birthImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/profile_birthday"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/birthTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1998.04.28"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/joindateImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/porfile_calendar"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/joindateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021.04.29"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/listImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/porfile_list"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/listTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5개의 도전 중 \n3개 성공"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/modifyInfoBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내정보 수정"
                android:textSize="20dp" />

            <Button
                android:id="@+id/join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
