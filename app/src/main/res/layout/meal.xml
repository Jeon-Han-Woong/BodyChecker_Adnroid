<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="20dp">

        <com.dinuscxj.progressbar.CircleProgressBar
            android:id="@+id/circlebar"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:progress_text_size="50dp"
            app:progress_style="solid_line"
            app:progress_stroke_width="20dp "
            app:progress_stroke_cap="round"
            app:progress_start_color="#FFBB00"
            app:progress_end_color="#ABF200"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

<!--    아침-->
    <LinearLayout
        android:id="@+id/bfll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아침 - "
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/breakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/breakfastCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 0kcal"
            android:textSize="15dp"/>

    </LinearLayout>

<!--    점심-->
    <LinearLayout
        android:id="@+id/lcll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="점심 - "
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/lunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="틈새라면, 특등돈까스밥바"
                android:textSize="20dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/lunchCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 1000kcal"
            android:textSize="15dp"/>

    </LinearLayout>

<!--    저녁-->
    <LinearLayout
        android:id="@+id/dnll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저녁 - "
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/dinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미스터피자"
                android:textSize="20dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/dinnerCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 300kcal"
            android:textSize="15dp"/>

    </LinearLayout>

<!--    간식-->
    <LinearLayout
        android:id="@+id/dsll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="간식 - "
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/disert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시리얼"
                android:textSize="20dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/disertCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 300kcal"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/moreDaysAgo"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:padding="0dp"
                app:cornerRadius="45dp"
                android:text="..." />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:text="더보기" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sixDaysAgo"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:padding="0dp"
                app:cornerRadius="45dp"
                android:text="100%" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:text="4/27" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fiveDaysAgo"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:padding="0dp"
                app:cornerRadius="45dp"
                android:text="100%"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:text="4/28" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fourDaysAgo"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:padding="0dp"
                app:cornerRadius="45dp"
                android:text="100%"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:text="4/29" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/threeDaysAgo"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:padding="0dp"
                app:cornerRadius="45dp"
                android:text="100%"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:text="4/30" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/twoDaysAgo"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:padding="0dp"
                app:cornerRadius="45dp"
                android:text="100%"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:text="5/1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/oneDaysAgo"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:padding="0dp"
                app:cornerRadius="45dp"
                android:text="100%"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:text="5/2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/today"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:padding="0dp"
                app:cornerRadius="45dp"
                android:text="100%"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:text="5/3" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>